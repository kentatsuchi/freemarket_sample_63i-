%header
  .header-main
    .header-top
      = link_to "/" ,class:"header-top__logo" do
        = image_tag '/svg/fmarket_logo_red.svg',class: "ca_logo",width: "130px"
      .header-top__search
        %input{name: "search",placeholder: "何かお探しですか？", type: "search", value: ""}/
        %button{type:"submit",class:"search-icon"}
          %i.fas.fa-search
    .header-bottom
      .header-bottom-left
        .header-bottom-left__category
          %i.fas.fa-list-ul
          カテゴリーから探す
        .header-bottom-left__brand
          %i.fas.fa-tag
          ブランドから探す
        
      .header-bottom-right
        - if user_signed_in? #ログイン中表示
          %ul
            %li
              %i.far.fa-heart
              いいね！一覧
            %li
              %i.far.fa-bell
              お知らせリスト
            %li
              %i.fas.fa-check
              やることリスト
            %li
              %i.far.fa-heart
              = link_to mypage_index_path, class: 'btn-red' do
                マイページ
        - else # ログアウト中表示
          %ul
            %li
              = link_to  signup_index_path, class: 'header-registration-btn' do
                新規会員登録
            %li
              = link_to new_user_session_path, class: 'header-login-btn' do
                ログイン
           

  - breadcrumb :exhibit
  = render "layouts/breadcrumbs"

