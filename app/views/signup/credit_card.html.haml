.payment-page  
  = render 'shared/signup-progress-header'
  .signup-main 
    .signup-main__container
      %h2.signup-main__container__header
        お支払い方法
      .signup-main__container__form
        .signup-main__container__form__box
          = form_tag( pay_registration_card_index_path, method: :post, id: 'charge-form',  name: "inputForm" ) do
            .signup-inner
              .form-group
                %label カード番号
                %span.form-require 必須
                = text_field "number", "", class: "input-default number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %ul.card-brand-list
                  %li 
                    = image_tag '/svg/visa-logo.gif'
                  %li
                    = image_tag '/svg/master-card_logo.svg'
                  %li
                    = image_tag '/svg/saison-log.gif'
                  %li
                    = image_tag '/svg/jcb-logo.gif'
                  %li
                    = image_tag '/svg/amex.gif'
                  %li
                    = image_tag '/svg/diners-logo.gif'
                  %li
                    = image_tag '/svg/discover-logo.gif'

              .form-group
                %div
                  %label 有効期限
                  %span.form-require 必須

                %select#exp_month.input-default.card-exp{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span 月
                %select#exp_year.input-default.card-exp{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span 年
              .form-group
                %label セキュリティコード
                %span.form-require 必須
                = text_field_tag "cvc", "", class: "input-default cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              .link-text-right
                %p
                  %span.hatena
                    ?
                  = link_to "#" do
                    カード裏面番号とは？
            .signup-inner
              .form-group#card_token
                
              = submit_tag "次へ進む", id: "token_submit", class: "login-submit btn-default btn-red"
  = render 'shared/signup-footer'


